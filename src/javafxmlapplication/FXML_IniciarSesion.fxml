<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" style="-fx-background-color: #5f84A2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.FXML_IniciarSesionController">
   <center>
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="260.0" minWidth="360.0" style="-fx-background-color: #5f84A2; -fx-border-color: #5f84A2;" BorderPane.alignment="CENTER">
         <children>
            <StackPane>
               <children>
                  <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#91aec4" height="260.0" stroke="#91aec4" strokeType="INSIDE" width="360.0" />
                  <HBox>
                     <children>
                        <GridPane prefHeight="250.0" prefWidth="350.0" style="-fx-background-color: white;">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2">
                                 <children>
                                    <Label alignment="CENTER" prefHeight="50.0" prefWidth="350.0" text="Iniciar sesión" textFill="#8fadc2">
                                       <font>
                                          <Font name="Times New Roman Bold" size="18.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                                 <children>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../icons/logo_usuario.jpg" />
                                       </image>
                                    </ImageView>
                                    <TextField fx:id="usernameMenuInicial" prefHeight="30.0" prefWidth="220.0" promptText="Usuario" />
                                 </children>
                                 <GridPane.margin>
                                    <Insets left="30.0" />
                                 </GridPane.margin>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                                 <children>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../icons/logo_passwd.jpg" />
                                       </image>
                                       <HBox.margin>
                                          <Insets left="5.0" right="5.0" />
                                       </HBox.margin>
                                    </ImageView>
                                    <StackPane>
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                       <children>
                                          <PasswordField fx:id="passwordMenuInicial" prefHeight="30.0" prefWidth="220.0" promptText="Contraseña" />
                                          <HBox alignment="CENTER_RIGHT">
                                             <children>
                                                <ImageView fx:id="mostrarContraseña" fitHeight="25.0" fitWidth="25.0" onDragDetected="#handleMostrarContraseña" opacity="0.33" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@../icons/logo_ojo.jpg" />
                                                   </image>
                                                </ImageView>
                                             </children>
                                             <StackPane.margin>
                                                <Insets right="5.0" />
                                             </StackPane.margin>
                                          </HBox>
                                       </children>
                                    </StackPane>
                                 </children>
                                 <GridPane.margin>
                                    <Insets left="30.0" />
                                 </GridPane.margin>
                              </HBox>
                              <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                                 <children>
                                    <Button fx:id="registrarseButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#menuRegistrarse" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #5f84A2;" text="Registrarse" textFill="WHITE" wrapText="true">
                                       <font>
                                          <Font name="Times New Roman" size="15.0" />
                                       </font>
                                       <effect>
                                          <DropShadow blurType="ONE_PASS_BOX" />
                                       </effect>
                                    </Button>
                                    <Button fx:id="iniciarSesionButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#iniciarSesionButton" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #5f84A2;" styleClass="shad" text="Iniciar sesión" textFill="WHITE">
                                       <font>
                                          <Font name="Times New Roman" size="15.0" />
                                       </font>
                                       <effect>
                                          <DropShadow blurType="ONE_PASS_BOX" />
                                       </effect>
                                    </Button>
                                 </children>
                                 <GridPane.margin>
                                    <Insets bottom="5.0" right="10.0" />
                                 </GridPane.margin>
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                                 <children>
                                    <Label fx:id="errorLogin" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="350.0" text="Usuario y/o contraseña incorrectos" textFill="RED" visible="false">
                                       <padding>
                                          <Insets bottom="10.0" />
                                       </padding>
                                    </Label>
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                     </children>
                     <StackPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </StackPane.margin>
                  </HBox>
               </children>
            </StackPane>
         </children>
      </Pane>
   </center>
   <top>
      <Pane minHeight="130.0" prefHeight="130.0" style="-fx-background-color: #5f84A2;" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Pane minWidth="0.0" prefWidth="120.0" style="-fx-background-color: #5f84A2;" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefWidth="120.0" style="-fx-background-color: #5f84A2;" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane minHeight="130.0" prefHeight="130.0" style="-fx-background-color: #5f84A2;" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
